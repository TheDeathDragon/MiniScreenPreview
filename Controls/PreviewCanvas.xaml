<UserControl x:Class="MiniScreenPreview.Controls.PreviewCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniScreenPreview.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="LightGray" BorderBrush="DarkGray" BorderThickness="2">
        <ScrollViewer x:Name="PreviewScrollViewer" 
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Viewbox Stretch="None">
                <Viewbox.LayoutTransform>
                    <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}"/>
                </Viewbox.LayoutTransform>
                <Canvas x:Name="MainCanvas" 
                        Background="White"
                        Width="{Binding PreviewWidth}"
                        Height="{Binding PreviewHeight}"
                        ClipToBounds="True"/>
            </Viewbox>
        </ScrollViewer>
    </Border>
</UserControl>