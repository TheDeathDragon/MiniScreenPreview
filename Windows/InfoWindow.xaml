<Window x:Class="MiniScreenPreview.Windows.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Information" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="InfoTextBox" 
                     IsReadOnly="True" 
                     TextWrapping="Wrap" 
                     Padding="10"
                     FontFamily="Consolas, Monaco, monospace"
                     FontSize="12"
                     Background="#F8F8F8"
                     BorderThickness="0"
                     VerticalAlignment="Stretch"/>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Copy to Clipboard" Click="CopyToClipboard_Click" 
                    Height="32" Padding="15,6" FontWeight="Medium"
                    Background="#2196F3" Foreground="White" BorderBrush="#1976D2"
                    Margin="0,0,10,0"/>
            <Button Content="Close" Click="Close_Click" 
                    Height="32" Padding="15,6" FontWeight="Medium"
                    Background="#757575" Foreground="White" BorderBrush="#616161"/>
        </StackPanel>
    </Grid>
</Window>